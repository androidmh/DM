<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleTv"
            style="@style/WrapWrap"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/localIv"
            android:contentDescription="@string/iv_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/titleTv"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/member" />

        <TextView
            android:id="@+id/describeTv"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignTop="@+id/localIv"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/localIv"
            android:layout_toRightOf="@+id/localIv"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/adTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/tv_ad"
            android:visibility="gone" />
    </RelativeLayout>
</android.support.v7.widget.CardView>