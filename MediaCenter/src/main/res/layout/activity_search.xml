<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@id/mToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_toolbar_size"
        android:background="@color/colorPrimary"
        android:paddingTop="10dp"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@mipmap/arrow_back">

        <EditText
            android:id="@+id/searchEt"
            android:layout_width="230dp"
            android:inputType="text"
            android:layout_height="25dp"
            android:imeOptions="actionSearch"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="@drawable/search_bg"
            android:drawableStart="@mipmap/search"
            android:drawableLeft="@mipmap/search"
            android:gravity="center"
            android:hint="@string/search_hint"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/text_small_size" />

        <TextView
            android:id="@+id/searchTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/search_tv"
            android:textColor="@color/white" />
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/historyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/history_tv"
            android:textColor="@color/common_black"
            android:textSize="@dimen/text_small_size"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:id="@+id/deleteIv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:contentDescription="@string/iv_des"
            android:src="@mipmap/delete" />
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/historyFl"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/historyTv"
            android:layout_gravity="bottom"
            app:flexWrap="wrap"
            app:justifyContent="flex_start" />
    </RelativeLayout>
</LinearLayout>