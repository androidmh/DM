<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch.Vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150.0dip"
        android:orientation="horizontal"
        android:background="@drawable/bg_me_header">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mUserIconIv"
            android:layout_width="@dimen/common_icon_width"
            android:layout_height="@dimen/common_icon_height"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_margin"
            android:src="@drawable/icon_default_user"
            android:layout_marginStart="@dimen/common_margin" />
        <TextView
            android:id="@+id/mUserNameTv"
            style="@style/WrapWrap"
            android:textSize="@dimen/text_big_size"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_margin"
            android:text="@string/un_login_text"
            android:layout_marginStart="@dimen/common_margin" />
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/border_bottom"
        android:paddingTop="@dimen/common_padding_middle"
        android:paddingBottom="@dimen/common_padding_middle"
        style="@style/MatchWrap.Horizontal">
        <TextView android:id="@+id/mWaitPayOrderTv"
            android:text="标签1"
            android:drawableTop="@drawable/icon_default_user"
            style="@style/MeOrderLabelStyle"/>
        <TextView android:id="@+id/mWaitConfirmOrderTv"
            android:text="标签2"
            android:drawableTop="@drawable/icon_default_user"
            style="@style/MeOrderLabelStyle"/>
        <TextView android:id="@+id/mCompleteOrderTv"
            android:text="标签3"
            android:drawableTop="@drawable/icon_default_user"
            style="@style/MeOrderLabelStyle"/>
        <TextView android:id="@+id/mAllOrderTv"
            android:text="标签4"
            android:drawableTop="@drawable/icon_default_user"
            style="@style/MeOrderLabelStyle"/>
    </LinearLayout>
    <TextView
        android:id="@+id/mAddressTv"
        android:layout_marginTop="@dimen/common_margin"
        android:text="推广"
        android:drawableLeft="@drawable/icon_default_user"
        style="@style/MeItemStyle"/>
    <TextView
        android:id="@+id/mShareTv"
        android:text="分享"
        android:drawableLeft="@drawable/icon_default_user"
        style="@style/MeItemStyle"/>
    <TextView
        android:id="@+id/mSettingTv"
        android:text="设置"
        android:drawableLeft="@drawable/icon_default_user"
        style="@style/MeItemStyle"/>
</LinearLayout>
